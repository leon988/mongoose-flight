<%- include('../partials/header') %>

<form action="/flights/<%= flightId %>/tickets" method="post">
  <div class="form-group">
    <label for="seat">Seat Number:</label>
    <input type="text" id="seat" name="seat" required pattern="[A-F][1-9]\d?">
    <small>Seat number should start with a letter from A to F and be followed by one or two digits.</small>
  </div>

  <div class="form-group">
    <label for="price">Price:</label>
    <input type="number" id="price" name="price" required min="0">
  </div>

  <input type="hidden" name="flightId" value="<%= flightId %>">

  <button type="submit">Add Ticket</button>
</form>

<%- include('../partials/footer') %>